@if (Model.Anime.Status != Status.Approved)
{
    @if ((await AuthorizationService.AuthorizeAsync(
      User, Model.Anime, Operations.Approve)).Succeeded)
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Anime.ID" />
            <input type="hidden" name="status" value="@Status.Approved" />
            <button type="submit" class="btn btn-xs btn-success">Approve</button>
        </form>
    }
}

@if (Model.Anime.Status != Status.Rejected)
{
    @if ((await AuthorizationService.AuthorizeAsync(
      User, Model.Anime, Operations.Reject)).Succeeded)
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Anime.ID" />
            <input type="hidden" name="status" value="@Status.Rejected" />
            <button type="submit" class="btn btn-xs btn-success">Reject</button>
        </form>
    }
}

<div>
    @if ((await AuthorizationService.AuthorizeAsync(
          User, Model.Anime,
          Operations.Update)).Succeeded)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Anime.ID">Edit</a>
        <text> | </text>
    }
    <a asp-page="./Index">Back to List</a>
</div>



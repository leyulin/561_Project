@page
@model AnimeCollections.Pages.Animes.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<h4>Anime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Anime.ID" />
            <div class="form-group">
                <label asp-for="Anime.Title" class="control-label"></label>
                <input asp-for="Anime.Title" class="form-control" />
                <span asp-validation-for="Anime.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anime.ReleaseDate" class="control-label"></label>
                <input asp-for="Anime.ReleaseDate" class="form-control" />
                <span asp-validation-for="Anime.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anime.Genre" class="control-label"></label>
                <input asp-for="Anime.Genre" class="form-control" />
                <span asp-validation-for="Anime.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anime.Price" class="control-label"></label>
                <input asp-for="Anime.Price" class="form-control" />
                <span asp-validation-for="Anime.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anime.Rating" class="control-label"></label>
                <input asp-for="Anime.Rating" class="form-control" />
                <span asp-validation-for="Anime.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
